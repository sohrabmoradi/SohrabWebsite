# Stage 1: Install dependencies
FROM node:18-alpine

WORKDIR /app

# Copy package.json and install
COPY package*.json ./
RUN npm install --production

# Copy app code
COPY . .

# Cloud Run uses PORT environment variable
ENV PORT 8080
EXPOSE 8080

# Start your server
CMD ["node", "index.js"]  # Replace index.js with your main backend file
